{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-4 mb-4 justify-content-center">
            <a href="{{ path('program_new') }}">
                <button class="btn btn-primary text-white">Create new</button>
            </a>
        </div>

        <div class="row">
            <h1>Program index</h1>
            <div class="container">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Poster</th>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Summary</th>
                        <th>Actors</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for program in programs %}
                        <tr>
                            <td><img class="img-thumbnail" style="max-width: 30%" src="{{ program.poster }}"
                                     alt="{{ program.title }} poster"></td>
                            <td>{{ program.id }}</td>
                            <td>{{ program.title }}</td>
                            <td>{{ program.summary }}</td>
                            <td>
                                {% for actor in program.actors %}
                                    <ul>
                                        <li><a href="{{ path('actor_show', {'slug':actor.slug })}}">{{ actor.name }}</a></li>
                                    </ul>
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('program_show', {'slug': program.slug}) }}">show</a>
                                <a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>


{% endblock %}
