{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Program index</h1>
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th>Poster</th>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for program in programs %}
                <tr>
                    <td><img class="img-thumbnail" style="max-width: 30%" src="{{ program.poster }}" alt="{{ program.title }} poster"></td>
                    <td>{{ program.id }}</td>
                    <td>{{ program.title }}</td>
                    <td>{{ program.summary }}</td>
                    <td>
                        <a href="{{ path('program_show', {'slug': program.slug}) }}">show</a>
                        <a href="{{ path('program_edit', {'slug': program.slug}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('program_new') }}">Create new</a>
{% endblock %}
