{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}
<div class="container">
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster" style="max-width: 400px">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
{#            <p>Categorie : {{ program.category.name }}</p>#}
        </div>
    </div>


    <div>
        <a href="{{ path('wild_show')  }}">
            Return to all programs
        </a>
    </div>
</div>

{% endblock %}
