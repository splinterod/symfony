{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div>
            <a href="{{ path('wild_index')  }}">
                Return to all programs
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('program_edit', { 'slug': program.slug } ) }}">Éditer</a>
            {%endif%}
        </div>
    </div>
    <div class="row">
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster" style="max-width:20%">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>Categorie : {{ program.category.name }}</p>
            <p>{{ program.summary }}</p>
            <ul>
                {% for season in seasons %}
                    <li><a href="/wild/episodes/{{ season.id }}">season {{ loop.index }} </a>: {{ season.description }} (year:{{ season.year }})</li>
                {% endfor %}
            </ul>
        </div>

    </div>
    </div>
</div>
